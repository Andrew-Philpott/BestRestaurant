@{
  Layout = "_Layout";
}

@model BestRestaurant.Models.Cuisine

<h1>Edit</h1>

<div class="content">
  <h4>Edit this cuisine: @Html.DisplayFor(model => model.Type)</h4>
  @using (Html.BeginForm("Update", "Cuisines"))
  {
      @Html.HiddenFor(model => model.CuisineId)

      @Html.LabelFor(model => model.Type)
      @Html.EditorFor(model => model.Type)

      <input type="submit" value="Save" class="btn btn-default"/>
  }
</div>

<div class='links'>
  <p>@Html.ActionLink("Back to cuisines", "Index")</p>
</div>

