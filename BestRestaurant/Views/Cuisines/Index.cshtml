@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Cuisine>;

<h1>Cuisines</h1>

<div class="content">
  @if (@Model.Count == 0)
  {
    <h3>No cuisines have been added yet!</h3>
  } 

  @foreach (Cuisine cuisine in Model)
  {
    <h4>@Html.ActionLink($"{cuisine.Type}", "Details", new { id = cuisine.CuisineId })</h4>
  }
</div>

<div class="links">
  <p>@Html.ActionLink("Add new cuisine", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>

