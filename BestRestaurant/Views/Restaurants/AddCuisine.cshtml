@{
  Layout = "_Layout";
}

@model BestRestaurant.Models.Restaurant

<h1>Add a cuisine</h1>


<div class="content">
  <h4>Add a cuisine to this restaurant: @Html.DisplayFor(model => model.Name)</h4>
  @using (Html.BeginForm())
  {
      @Html.HiddenFor(model => model.RestaurantId)

      @Html.Label("Select cuisine")
      @Html.DropDownList("CuisineId")

      <input type="submit" value="Save" class="btn btn-default"/>
  }
</div>

<div class="links">
  <p>@Html.ActionLink("Back to restaurants", "Index")</p>
</div>
