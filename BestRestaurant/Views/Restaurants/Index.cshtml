@{
  Layout = "_Layout";
@* 
  var cuisines = ViewData["Cuisines"]; *@
}

@using BestRestaurant.Models;
@model List<BestRestaurant.Models.Restaurant>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h3>No restaurants have been added yet!</h3>
} 

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new { id = restaurant.RestaurantId }) | @restaurant.Cuisine.Type</li>
}

@if(ViewBag.Cuisines.Count != 0) {
  <p>@Html.ActionLink("Add new restaurant", "New")</p>
}

<p>@Html.ActionLink("Home", "Index", "Home")</p>